<div class="container">
    <div class="single-card">
        <img src="assets/card.webp" alt="<%= card.name %>" />
        <h2><%= card.name %></h2>
        <p>Power: <span class="properties"><%= card.power %></span></p>
        <p>Provision: <span class="properties"><%= card.provision %></span></p>
        <p>Faction: <span class="properties"><%= card.faction %></span></p>
        <p>Type: <span class="properties"><%= card.type %></span></p>
        <div class="buttons">
            <button type="submit">Save</button>
            <button type="button" class="cancel-btn">Cancel</button>
        </div>
    </div>
</div>
